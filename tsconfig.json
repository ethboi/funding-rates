{
  "compilerOptions": {
    "module": "CommonJS",
    "lib": ["ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "build",
    "incremental": false,
    "sourceMap": false,
    "noEmit": false,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve"
  },
  "exclude": ["node_modules", ".yarn"],
  "include": ["src/**/*.ts"]
}
